{
  "manifest_version": 3,
  "name": "Inflow",
  "description": "Seamlessly query an LLM on your current page context. Just type a question to invoke.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Inflow",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://openrouter.ai/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://openrouter.ai https://api.openai.com https://generativelanguage.googleapis.com https://api.anthropic.com"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html",
        "panel.js",
        "panel.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "invoke-inflow": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Invoke Inflow"
    }
  }
}

